<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motos Mas Visitadas"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/barraCircularMasVisitas"
            android:layout_width="match_parent"
            android:layout_height="500dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motos Menos Visitadas"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="25dp" />


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/barraCircularMenosVisitas"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginBottom="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Motos Mas Buscadas"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginBottom="45dp"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barraMasBusquedas"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginBottom="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Motos Menos Buscadas"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginBottom="45dp"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barraMenosBusquedas"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnMostrarNoVisibles"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:backgroundTint="@color/grisFondo"
            android:text="Motos no visibles" />
    </LinearLayout>

</ScrollView>