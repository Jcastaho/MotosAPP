<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addmotos.GalleryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo Registro"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="5dp">

            <EditText
                android:id="@+id/edtCarpeta1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="Nombre de Fabricante"/>

            <EditText
                android:id="@+id/edtCarpeta2"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:hint="Nombre de Marca" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp">

            <EditText
                android:id="@+id/edtCarpeta3"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="Proposito de la Moto"/>

            <EditText
                android:id="@+id/edtNombreMotos"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:hint="Nombre de Moto"/>


        </LinearLayout>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:layout_margin="60dp"
            android:text="GUARDAR REGISTRO"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="30dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPasar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:backgroundTint="@color/black"
                android:text="web scraping"/>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>